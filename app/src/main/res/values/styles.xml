<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Custom TextAppearance for Notification Title -->
    <style name="TextAppearance.Notification.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item> <!-- Red text color -->
        <item name="android:textSize">18sp</item>     <!-- Text size 18sp -->
        <item name="android:textStyle">bold</item>    <!-- Bold text style -->
    </style>
    <style name="TextAppearance.Notification.Message" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item> <!-- Red text color -->
        <item name="android:textSize">18sp</item>     <!-- Text size 18sp -->
        <item name="android:textStyle">bold</item>    <!-- Bold text style -->
    </style>
</resources>
